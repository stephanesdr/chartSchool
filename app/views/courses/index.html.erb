<%= link_to "Accueil", root_path %> <br>
<% puts "$$$$$$$$$$$ current_person.courses_as_attendee : #{current_person.courses_as_attendee.count}" %>
<h1>Mes cours à venir</h1>

  <% if @archived_courses %>
  <table style="width:100%">
    <tr>
      <th>Titre</th>
      <th>Enseignant</th>
      <th>Date</th>
      <th>Link</th>
    </tr>
    <% @archived_courses.each do |course| %>
    <tr>
      <td><%= course.title %></td>
      <td><%= course.creator.name %></td>
      <td><%= course.start_time %></td>
      <td><%= link_to 'lien', course_path(course) %></td>
    </tr>
    <% end %>
  <% else %>
    <p>Aucun cours à venir</p>
  <% end %>
  </table>

<h1>Mes cours passés</h1>

  <% if @pending_courses %>
  <table style="width:100%">
    <tr>
      <th>Titre</th>
      <th>Enseignant</th>
      <th>Date</th>
      <th>Link</th>
    </tr>
    <% @pending_courses.each do |course| %>
    <tr>
      <td><%= course.title %></td>
      <td><%= course.creator.name %></td>
      <td><%= course.start_time %></td>
      <td><%= link_to 'lien', course_path(course) %></td>
    </tr>
    <% end %>
  <% else %>
    <p>Aucun cours archivé</p>
  <% end %>
  </table>
