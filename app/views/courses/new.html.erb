<%= form_tag url_for(action: 'create'), multipart: true, method: "post" do %>



        <%= label_tag 'Titre' %><br>
        <%= text_field_tag 'title', @title  %><br>

        <%= label_tag 'Description' %><br>
        <%= text_area_tag 'description', @description  %><br>

        <%= label_tag 'Ressource' %><br>
        <%= text_area_tag 'resource', @resource  %><br>

        <%= label_tag 'Date de début' %><br>
        <%= date_field_tag 'start_time', @start_time  %>
        <%= time_field 'start_hour', @start_hour %><br>

        <%= label_tag 'Date de début' %><br>
        <%= date_field_tag 'end_time', @end_time  %>
        <%= time_field 'end_hour', @end_hour %><br>

        <%= submit_tag "Créer le cours" %>

  <% end %>
